<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/driverDetailsProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver Details"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/driverNameTv"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView

        android:layout_marginTop="20dp"
        android:id="@+id/driverEmailTv"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView

        android:layout_marginTop="20dp"
        android:id="@+id/driverPhoneNumberTv"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView

        android:layout_marginTop="20dp"
        android:id="@+id/driverAdhaarNumberTv"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="wrap_content"
         />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/driverVehicleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Details"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/vehicleNumberTv"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vehicleNumberTv" />

    <TextView
        android:id="@+id/ownerNameTv"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ownerNameTv" />

    <TextView
        android:id="@+id/ownerPhoneTv"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ownerPhoneTv" />

    <TextView
        android:id="@+id/ownerAddressTv"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ownerAddressTv" />

    <TextView
        android:id="@+id/vehicleName"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vehicleName" />

    <Button
        android:id="@+id/editProfileBt"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit" />
    <Button
        android:id="@+id/backProfileBt"

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>